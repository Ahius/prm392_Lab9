<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderFoodAndDrink">

    <TextView
        android:id="@+id/txt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:textSize="18sp"
        android:text="Order view"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/btnFood"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt1"
        android:layout_marginTop="70dp"
        android:layout_marginStart="50dp"
        android:text="Order Food"
        android:background="@drawable/custom_button"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:id="@+id/btnDrink"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt1"
        android:layout_marginTop="70dp"
        android:text="Order Drink"
        android:background="@drawable/custom_button"
        app:layout_constraintStart_toEndOf="@+id/btnFood"
        android:layout_marginStart="45dp"
        />

    <TextView
        android:id="@+id/tvOderFood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginStart="100dp"
        app:layout_constraintTop_toBottomOf="@+id/btnFood"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="60dp"
        />

    <TextView
        android:id="@+id/txt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text=" - "
        app:layout_constraintTop_toBottomOf="@+id/btnFood"
        app:layout_constraintStart_toEndOf="@+id/tvOderFood"
        android:layout_marginTop="60dp"
        />

    <TextView
        android:id="@+id/tvOderDrink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/btnFood"
        app:layout_constraintStart_toEndOf="@+id/txt3"
        android:layout_marginTop="60dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>